<% layout("layouts/boilerplate") %>

<h1>All Events</h1>
<div>
  <button><a href="/events/new">Add a new event</a></button>
</div>
<div class="container row">
  <% for (let event of events){ %>
  <div class="card mb-3 overflow-hidden px-0 mx-auto" style="width: 18rem;">
    <img class="card-img-top img-fluid " src="<%= event.image %>" alt="<%= event.name %> image">
    <div class="card-body">
      <h5 class="card-title"><%= event.name %></h5>
      <h6 class=""><%= event.date %> - <%= event.location %></h5>
      <p class="card-text"><%= event.description %></p>
      <a href="/events/<%= event._id %>" class="btn btn-primary bg-dark">More Details</a>
    </div>
  </div>
  <% } %>
  
</div>

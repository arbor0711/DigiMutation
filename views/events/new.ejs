<% layout("layouts/boilerplate") %>

<div class="row">
  <h1 class="text-center">Add an event</h1>
  <!-- one way to center all element is use class="col-6 offset-3" -->
  <div class="col-6 offset-3">
    <form action="/events" method="post" class="needs-validation" novalidate>
      <div class="form-group mb-3">
        <label for="name">Title:</label>
        <br />
        <input
          class="form-control"
          type="text"
          name="event[name]"
          id="name"
          required
        />
        <div class="invalid-feedback">Add event's name</div>
      </div>

      <div class="form-group mb-3">
        <label for="location">Location:</label>
        <br />
        <input
          class="form-control"
          type="text"
          name="event[location]"
          id="location"
          required
        />
        <div class="invalid-feedback">Add event's location</div>
      </div>

      <div class="form-group mb-3">
        <label for="image">Image URL:</label>
        <br />
        <input
          class="form-control"
          type="text"
          name="event[image]"
          id="image"
          required
        />
        <div class="invalid-feedback">Add an image URL</div>
      </div>

      <div class="form-group mb-3">
        <label for="description">Description:</label>
        <br />
        <textarea
          class="form-control"
          name="event[description]"
          id="description"
          rows="3"
          required
        ></textarea>
        <div class="invalid-feedback">Add some description</div>
      </div>

      <div class="form-group mb-3">
        <label for="date">Date: </label>
        <input type="date" name="event[date]" id="date" />
        <div class="invalid-feedback">Choose event's date</div>
      </div>

      <input class="btn btn-secondary" type="submit" value="Add" />
      <button class="btn btn-secondary" type="reset">Reset Form</button>
      <a class="btn btn-secondary" role="button" href="/events">Back</a>
      <a class="btn btn-secondary" role="button" href="/">Homepage</a>
    </form>
  </div>
</div>

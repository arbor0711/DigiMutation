<% layout("layouts/boilerplate") %>

<div class="row">
  <h1 class="text-center">Edit Event</h1>
  <div class="col-6 offset-3">
    <form action="/events/<%= event._id %>?_method=PUT" method="post">
      <div class="form-group mb-3">
        <label for="name">Title:</label>
        <br />
        <input
          class="form-control"
          type="text"
          name="event[name]"
          id="name"
          value="<%= event.name %>"
        />
      </div>

      <div class="form-group mb-3">
        <label for="location">Location:</label>
        <br />
        <input
          class="form-control"
          type="text"
          name="event[location]"
          id="location"
          value="<%= event.location %>"
        />
      </div>

      <div class="form-group mb-3">
        <label for="image">Image URL:</label>
        <br />
        <input
          class="form-control"
          type="text"
          name="event[image]"
          id="image"
          value="<%= event.image %>"
        />
      </div>

      <div class="form-group mb-3">
        <label for="description" value="event.description">Description:</label>
        <br />
        <textarea
          class="form-control"
          name="event[description]"
          id="description"
          rows="3"
        >
<%= event.description %></textarea
        >
      </div>

      <div class="form-group mb-3">
        <label for="date">Date: </label>
        <input
          type="date"
          name="event[date]"
          id="date"
          value="<%= event.date %>"
        />
      </div>

      <input class="btn btn-dark" type="submit" value="save" />
      <a class="btn btn-dark" href="/events">Cancel</a>
      <a class="btn btn-dark" href="/">Homepage</a>
    </form>
  </div>
</div>
